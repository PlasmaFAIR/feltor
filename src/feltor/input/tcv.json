{
    "grid":
    {
        "n"  : 3,
        "Nx" : 56,
        "Ny" : 96,
        "Nz" : 16,
        "scaleR" :  [1.3,1.10],
        "scaleZ" :  [2.05,1.55]
    },
    "advection":
    {
        "slope-limiter" : "none"
    },
    "timestepper":
    {
        "type" : "multistep",
        "tableau": "TVB-3-3",
        "dt" : 1e-1
    },
    "FCI":
    {
        "refine": [5,5],
        "rk4eps": 1e-6,
        "periodify": true,
        "bc" : "along_field",
        "interpolation-method" : "linear"
    },
    "output":
    {
        "type" : "netcdf",
        "inner_loop" : 2,
        "itstp"  : 2,
        "maxout" : 1,
        "compression" : [1,1]
    },
    "elliptic":
    {
        "stages" : 3,
        "eps_pol"    : [1e-6,10,10],
        "eps_gamma" : 1e-6,
        "eps_ampere" : 1e-6,
        "direction" : "centered",
        "jumpfactor" : 1.0
    },
    "magnetic_field":
    {
        "curvmode" : "toroidal",
        "input": "file",
        "file" : "geometry/tcv.json"
    },
    "physical":
    {
        "mu"          : -0.000272121,
        "tau"         : 0.0,
        "beta"        : 1e-4,
        "resistivity" : 3.43e-6,
        "viscosity" : "braginskii"
    },
    "regularization":
    {
        "order" : 2,
        "direction": "forward",
        "nu_perp_n" : 1e-5,
        "nu_perp_u" : 1e-5
    },
    "boundary":
    {
        "wall":
        {
            "type": "sol_pfr",
            "penalization" : 1e+0,
            "boundary": [1.1,0.998],
            "alpha": [0.10,0.10],
            "modify-B" : true,
            "penalize-rhs" : false,
            "nwall" : 1.0,
            "uwall" : 0.0
        },
        "sheath":
        {
            "type": "bohm",
            "penalization" : 1e+0,
            "boundary": 0.125,
            "alpha": 0.0625,
            "penalize-rhs" : false,
            "coordinate" : "s",
            "max_angle" : 4
        },
        "bc" :
        {
            "density" : ["DIR", "DIR"],
            "nbc" : 1.0,
            "velocity": ["NEU", "NEU"],
            "potential":["DIR", "DIR"],
            "aparallel":["NEU", "NEU"]
        }
    },
    "init":
    {
        "type" : "fields",
        "density" :
        {
            "type" : "const",
            "background" : 1.0
        },
        "velocity" :
        {
            "type" : "zero"
        }
    },
    "source":
    {
        "minne" : 0.0,
        "type" : "influx",
        "rate": 1e-2,
        "ntilde": {
            "type" : "turbulence",
            "amplitude"  : 0.1,
            "rk4eps" : 1e-6,
            "refine" : [5,5],
            "revolutions" : 1,
            "sigma_z" : 0.5
        },
        "profile":
        {
            "type" : "aligned",
            "amplitude" : 1.0
        },
        "damping":
        {
            "type": "alignedX",
            "alpha" : 0.2,
            "boundary" : 0.55,
            "background" : 1.0
        }
    },
    "flags" :  ["calibrate", "symmetric"]
}

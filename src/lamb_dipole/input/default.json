    },

    "init":
    {
        "type" : "lamb",
        "velocity" : 1,     // (blob speed)
        "sigma"    : 0.1,   //(dipole radius in units of lx)
        "posX"     : 0.5,   // ( in units of lx)
        "posY"     : 0.8   // ( in units of ly)
